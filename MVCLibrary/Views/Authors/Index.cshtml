@{
  Layout = "_Layout";
}

@using MVCLibrary.Models;
@model List<MVCLibrary.Models.Author>;


<h1>All the authors in our Library</h1>

@if (@Model.Count == 0)
{
  <h3>No authors in the library</h3>
}

 @foreach (Author author in Model)
{
  <li>@Html.ActionLink($"{author.LastName}, {author.FirstName}", "Details", new { id = author.AuthorId })</li>

}

<p>@Html.ActionLink("Add a new author", "Create")</p>